{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "dom"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/plugins/wallet" },
    { "path": "./packages/plugins/example" },
    { "path": "./examples/basic-workflow" }
  ],
  "exclude": ["node_modules", "dist"]
} 